<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Emplyer_job_Add_Page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company Logo :"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    ></TextView>
                <ImageView
                    android:id="@+id/imz"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"

                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edit_text_shape"
                    android:clickable="true"
                    android:foregroundGravity="center"
                    android:padding="10dp"
                    android:src="@drawable/person">

                </ImageView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job type : "
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:textSize="25dp"
                        ></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/purple_500"
                        android:layout_marginHorizontal="10dp"
                        android:padding="5dp"
                        android:background="@drawable/edit_text_shape"
                        >

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_margin="0dp"
                            android:background="@color/sky"

                            android:textAlignment="center"
                            android:id="@+id/jobTypeSpinner"
                            ></Spinner>
                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job title : "
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:textSize="25dp"
                        ></TextView>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/empjobTitle"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:textSize="25dp"
                        android:background="@drawable/edit_text_shape"
                        ></EditText>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job Level : "
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:textSize="25dp"
                        ></TextView>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/empjobLevel"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:textSize="25dp"
                        android:background="@drawable/edit_text_shape"
                        ></EditText>
                </LinearLayout>








                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Employer name : "
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        ></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/employerName"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:paddingHorizontal="10dp"
                        android:textSize="25dp"
                        android:background="@drawable/edit_text_shape"
                        ></EditText>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Organization name : "
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        ></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/OrganizationName"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:paddingHorizontal="10dp"
                        android:textSize="25dp"
                        android:background="@drawable/edit_text_shape"
                        ></EditText>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Organization Type : "
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        ></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/organizationType"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:paddingHorizontal="10dp"
                        android:textSize="25dp"
                        android:background="@drawable/edit_text_shape"
                        ></EditText>
                </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job Location : "
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        ></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/empjobLocation"
                        android:layout_margin="10dp"
                        android:textSize="25dp"
                        android:paddingHorizontal="10dp"
                        android:lines="5"
                        android:textColor="@color/black"
                        android:isScrollContainer="true"
                        android:scrollbars="vertical"
                        android:verticalScrollbarPosition="right"
                        android:inputType="textMultiLine"
                        android:background="@drawable/edit_text_shape"
                        ></EditText>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Work place : "
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        ></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/workPlace"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:paddingHorizontal="10dp"
                        android:textSize="25dp"
                        android:background="@drawable/edit_text_shape"
                        ></EditText>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Company Size : "
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        ></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/CompanySize"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:paddingHorizontal="10dp"
                        android:textSize="25dp"
                        android:background="@drawable/edit_text_shape"
                        ></EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Post Date : "
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        ></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/PostDate"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:paddingHorizontal="10dp"
                        android:textSize="25dp"
                        android:background="@drawable/edit_text_shape"
                        ></EditText>
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vacancy : "
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        ></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textColor="@color/black"
                        android:id="@+id/empjobvacancy"
                        android:paddingHorizontal="10dp"
                        android:layout_margin="10dp"
                        android:inputType="number"
                        android:textSize="25dp"
                        android:background="@drawable/edit_text_shape"
                        ></EditText>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Business Description : "
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:textSize="25dp"
                        ></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/BusinesDesciption"
                        android:layout_margin="10dp"
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        android:inputType="textMultiLine"
                        android:lines="10"
                        android:background="@drawable/edit_text_shape"
                        ></EditText>
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job Description : "
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:textSize="25dp"
                        ></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/empJobdescription"
                        android:layout_margin="10dp"
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        android:inputType="textMultiLine"
                        android:lines="10"
                        android:background="@drawable/edit_text_shape"
                        ></EditText>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job responsiblity : "
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:textSize="25dp"
                        ></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/empJobResponsiblity"
                        android:layout_margin="10dp"
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        android:inputType="textMultiLine"
                        android:lines="10"
                        android:background="@drawable/edit_text_shape"
                        ></EditText>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job Context : "
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:textSize="25dp"
                        ></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/JobContext"
                        android:layout_margin="10dp"
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        android:inputType="textMultiLine"
                        android:lines="10"
                        android:background="@drawable/edit_text_shape"
                        ></EditText>
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qualification : "
                        android:layout_margin="10dp"
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        ></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/emp_educationalQualification"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:paddingHorizontal="10dp"
                        android:inputType="textMultiLine"
                        android:lines="10"
                        android:background="@drawable/edit_text_shape"
                        ></EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Experience : "
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        ></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/Experience"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:paddingHorizontal="10dp"
                        android:textSize="25dp"
                        android:background="@drawable/edit_text_shape"
                        ></EditText>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salary from : "
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:textSize="25dp"
                        ></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/Salary"
                        android:paddingHorizontal="10dp"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:inputType="numberDecimal"
                        android:background="@drawable/edit_text_shape"
                        ></EditText>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salary to : "
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:textSize="25dp"
                        ></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/Salaryto"
                        android:paddingHorizontal="10dp"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:inputType="numberDecimal"
                        android:background="@drawable/edit_text_shape"
                        ></EditText>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yearly Bonus : "
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:textSize="25dp"
                        ></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/yearlyBonus"
                        android:paddingHorizontal="10dp"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:inputType="numberDecimal"
                        android:background="@drawable/edit_text_shape"
                        ></EditText>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salary Revies : "
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:textSize="25dp"
                        ></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/SalaryReview"
                        android:paddingHorizontal="10dp"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:inputType="numberDecimal"
                        android:background="@drawable/edit_text_shape"
                        ></EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Others : "
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:textSize="25dp"
                        ></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/Others"
                        android:paddingHorizontal="10dp"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:background="@drawable/edit_text_shape"
                        ></EditText>
                </LinearLayout>







                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Application deadline : "
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:textSize="25dp"
                        ></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/deadline"
                        android:clickable="true"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:textSize="25dp"
                        android:inputType="date"
                        android:background="@drawable/edit_text_shape"
                        ></TextView>
                </LinearLayout>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Confirm Post"
                    android:background="@drawable/btn_shape"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="30dp"
                    android:id="@+id/confirmPost"
                    ></Button>


            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</LinearLayout>