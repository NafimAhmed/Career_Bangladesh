<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/back_color"
    tools:context=".registration_page">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <ImageView
                android:layout_width="200dp"
                android:id="@+id/imz"
                android:foregroundGravity="center"
                android:layout_gravity="center"
                android:onClick="imagechooser"
                android:src="@drawable/person"
                android:clickable="true"
                android:layout_height="200dp">

            </ImageView>


           <!-- <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="50dp"
                android:scaleType="fitCenter"
                android:id="@+id/imz"
                android:onClick="imagechooser"
                android:src="@drawable/person"
                app:riv_border_color="#4CAAF4"
                app:riv_border_width="5dp"
                app:riv_corner_radius="100dp"
                app:riv_mutate_background="true"
                app:riv_oval="false"
                android:clickable="true"
                app:riv_tile_mode="repeat"></com.makeramen.roundedimageview.RoundedImageView>-->


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edit_text_shape"
                android:hint="Name"
                android:inputType="textCapWords"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textColorHint="#757373"></EditText>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/email"
                android:background="@drawable/edit_text_shape"
                android:hint="Email"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textColorHint="#757373"></EditText>



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/password"
                android:background="@drawable/edit_text_shape"
                android:hint="Password"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textColorHint="#757373"></EditText>



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edit_text_shape"
                android:hint="Phone Number"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textColorHint="#757373"></EditText>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please Select role : "
                    android:textColor="@color/black"
                    android:textSize="20dp"></TextView>

                <Spinner
                    android:id="@+id/loginSpinner"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text_shape"
                    android:backgroundTint="#93066B"></Spinner>


            </LinearLayout>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#B10C82"
                android:text="Sign up"
                android:id="@+id/register"
                android:textSize="25dp"></Button>


        </LinearLayout>


    </ScrollView>


</LinearLayout>