<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".Login_page">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:background="#645C8E"
                >

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/logo"
                    android:layout_gravity="center"
                    ></ImageView>


                <TextView
                    android:layout_width="wrap_content"
                    android:text="Career Bangladesh"
                    android:textSize="40dp"
                    android:fontFamily="@font/opensence_variable"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_light_background"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"></TextView>





            </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/opensence_variable"
            android:text="Please Select role : "
            android:textSize="20dp"
            ></TextView>

        <Spinner
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:id="@+id/loginSpinner"
            android:backgroundTint="#93066B"
            android:background="@drawable/edit_text_shape"
            ></Spinner>


    </LinearLayout>




    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="email"
        android:fontFamily="@font/opensence_variable"
        android:textColorHint="#595757"
        android:textColor="@color/black"
        android:id="@+id/loginEmail"
        android:background="@drawable/edit_text_shape"
        android:textSize="20dp"
        android:padding="20dp"
        android:layout_margin="20dp"
        ></EditText>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:fontFamily="@font/opensence_variable"
        android:inputType="textPassword"
        android:textColorHint="#595757"
        android:layout_margin="20dp"
        android:textColor="@color/black"
        android:id="@+id/loginPassword"
        android:background="@drawable/edit_text_shape"
        android:padding="20dp"
        ></EditText>




    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textSize="25dp"
        android:fontFamily="@font/opensence_variable"
        android:text="Log in"
        android:id="@+id/loginBtn"
        android:backgroundTint="#B10C82"
        android:layout_gravity="center_horizontal"
        ></Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot password"
                android:textSize="20dp"
                android:fontFamily="@font/opensence_variable"
                android:textColor="@color/purple_500"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:id="@+id/forgotPassword"
                android:clickable="true"
                android:onClick="forgotPass"
                ></TextView>



            <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you are not registered, Please click here"
        android:textSize="20dp"
        android:textColor="@color/purple_500"
        android:layout_marginTop="30dp"
                android:fontFamily="@font/opensence_variable"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:id="@+id/signupTxt"
        android:clickable="true"
        android:onClick="register"
        ></TextView>






        </LinearLayout>



    </ScrollView>



</LinearLayout>