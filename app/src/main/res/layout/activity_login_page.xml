    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/opensence_variable"
            android:text="Please Select Role : "
            android:textSize="20dp"
            ></TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:backgroundTint="#93066B"
            android:gravity="end"
            android:background="@drawable/edit_text_shape"

            >



            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:id="@+id/loginSpinner"


                ></Spinner>



        </LinearLayout>




    </LinearLayout>




    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:fontFamily="@font/opensence_variable"
        android:textColorHint="#595757"
        android:textColor="@color/black"
        android:id="@+id/loginEmail"
        android:background="@drawable/edit_text_shape"
        android:textSize="20dp"
        android:padding="15dp"
        android:layout_margin="20dp"
        ></EditText>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:fontFamily="@font/opensence_variable"
        android:inputType="textPassword"
        android:textColorHint="#595757"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/black"
        android:id="@+id/loginPassword"
        android:background="@drawable/edit_text_shape"
        android:padding="15dp"
        ></EditText>

            <CheckBox android:id="@+id/checkbox_showPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="Show password"
                ></CheckBox>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot password ??"
                android:textSize="20dp"

                android:fontFamily="@font/opensence_variable"
                android:textColor="#BD106A"
                android:layout_marginTop="10dp"
                android:layout_gravity="end"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/forgotPassword"
                android:clickable="true"

                ></TextView>




    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:fontFamily="@font/opensence_variable"
        android:text="Sign in"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/loginBtn"
        android:background="@drawable/btn_shape"
        android:backgroundTint="#BD106A"
        android:layout_gravity="center_horizontal"
        ></Button>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- - - - - - - - - - -Or login with- - - - - - - - - - -"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:textSize="20dp"
                ></TextView>



            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


              <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="20dp"
                   android:padding="10dp"
                   android:clickable="true"
                   android:id="@+id/google_signin"
                   android:background="@drawable/btn_shape"
                   android:backgroundTint="@color/white"
                   android:orientation="horizontal"
                   >
                   <ImageView
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:src="@drawable/google"
                       ></ImageView>
<!--                   <TextView-->
<!--                       android:layout_width="wrap_content"-->
<!--                       android:layout_height="wrap_content"-->
<!--                       android:textSize="20dp"-->
<!--                       android:textStyle="bold"-->
<!--                       android:textColor="@color/grey"-->
<!--                       android:layout_gravity="center"-->
<!--                       android:gravity="center"-->
<!--                       android:text="  Google "-->
<!--                       ></TextView>-->

               </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:padding="10dp"
                    android:layout_gravity="right"
                    android:background="@drawable/btn_shape"
                    android:backgroundTint="@color/white"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/fb"
                        ></ImageView>
<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:textSize="20dp"-->
<!--                        android:textStyle="bold"-->
<!--                        android:textColor="@color/grey"-->
<!--                        android:layout_gravity="center"-->
<!--                        android:gravity="center"-->
<!--                        android:text="  Facebook"-->
<!--                        ></TextView>-->

                </LinearLayout>



            </LinearLayout>





            <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
                android:fontFamily="@font/opensence_variable"
        android:text="Don't have account? Signup"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:id="@+id/signupTxt"
        android:clickable="true"

        ></TextView>






        </LinearLayout>



    </ScrollView>



</LinearLayout>